
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block content
  .container
    include author
    h1= page.title
    span.post-date= moment.utc(page.date).format('ll')
    span.post-date
      | #{ 'Written by ' }
      mixin author(page.metadata.author)
    article.article
      section.content!= typogr(page.html).typogrify()

